<h1>Cart</h1>
<%= @carts.each do |cart| %>
  <%= cart.quantity %>
  <%= cart.product_id %>
  <%= cart.member_id %>
  <%= cart.product.name %>
  <%= cart.product.name %>

<% end %>

<div class="item-list">
  <% @carts.each do |cart| %>

    <div class="item">
      <img src="<%= "/product_images/#{cart.product.image_path} "%>" alt="商品画像">
      <p><%= cart.product.name %></p>
      <p><%= cart.product.price %>円</p>
      <p>数量：<%= cart.quantity %></p>
    </div>

  <% end %>
  <%= @total_price %>
</div>
