<p id="notice"><%= notice %></p>

<div class="show-item">
  <div class="item-img">
    <img src="<%= "/product_images/#{@product.image_path} "%>" alt="商品画像">
  </div>
  <div class="item-detail">
    <p><strong>商品名：</strong><%= @product.name %></p>
    <p><strong>産地：</strong><%= @product.product_area %></p>
    <p><strong>種類：</strong><%= @product.material %></p>
    <p><strong>アルコール度数：</strong><%= @product.alcohol %></p>
    <p><strong>価格：</strong><%= @product.price %>円</p>
    <label for="">数量</label>
    <input type="number">
    <button><%= link_to("カートに入れる", "#") %></button>
  </div>
</div>

